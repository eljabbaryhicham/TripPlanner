rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isSuperAdmin() {
      return isAdmin() && get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'superadmin';
    }

    // ------------------------------------------------------------------------
    // Global Admin Override
    // ------------------------------------------------------------------------

    // This rule allows any administrator to perform any action on any document.
    // Because Firestore rules are OR'd, if a user is an admin, this is the only rule
    // that needs to pass. Subsequent rules are for non-admin users.
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // ------------------------------------------------------------------------
    // Public Read Rules (for non-admins and anonymous users)
    // ------------------------------------------------------------------------
    match /hotels/{hotelId} { allow read: if true; }
    match /carRentals/{carRentalId} { allow read: if true; }
    match /transports/{transportId} { allow read: if true; }
    match /exploreTrips/{tripId} { allow read: if true; }
    match /reviews/{reviewId} { allow read: if true; }

    // ------------------------------------------------------------------------
    // User-Specific Rules (for non-admins)
    // ------------------------------------------------------------------------
    match /users/{userId} {
      // A non-admin can only get or update their own profile.
      allow get, update: if isOwner(userId);
      // A non-admin can only create their own profile document.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      // Listing all users or deleting profiles is disallowed for non-admins.
      allow list, delete: if false;
    }

    match /users/{userId}/reservations/{reservationId} {
      // A non-admin can only manage their own reservations.
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/serviceSuggestions/{serviceSuggestionId} {
      // A non-admin can only manage their own suggestions.
      allow read, write: if isOwner(userId);
    }

    // ------------------------------------------------------------------------
    // Public Create Rules (for non-admins)
    // ------------------------------------------------------------------------
    
    // Any user can submit an inquiry. It will be managed by admins.
    match /inquiries/{inquiryId} {
      allow create: if true;
      // Reads and writes for non-admins are disallowed. They are handled by the global admin rule.
      allow read, update, delete: if false; 
    }

    // Any signed-in user can create a review for themselves.
    match /reviews/{reviewId} {
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.rating >= 1 && request.resource.data.rating <= 5;
      // A non-admin user can only update/delete their own review.
      allow update, delete: if isOwner(resource.data.userId);
    }

    // ------------------------------------------------------------------------
    // Admin Role Creation (Self-Service for First Admin)
    // ------------------------------------------------------------------------
    match /roles_admin/{adminId} {
      // A non-admin can only create their own initial 'admin' role document.
      allow create: if isOwner(adminId);
      // Non-admins can't read other admin docs.
      allow get: if isOwner(adminId);
      // Non-admins can't list admins, update roles, or delete admins.
      allow list, update, delete: if false;
    }
  }
}
